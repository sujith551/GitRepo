<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sujith.findgitrepo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FindRepoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_git_hub_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_git_hub_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".repos.RepoListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".repos_details.RepoDetailsActivity"
            android:label="@string/title_activity_repo_details" />
        <activity android:name=".contributor_details.ContributorActivity" />
        <activity android:name=".webview.WebViewActivity"></activity>
    </application>

</manifest>